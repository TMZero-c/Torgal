{
  "name": "torgal",
  "version": "1.0.0",
  "description": "Local-first AI presentation slide advancer",
  "author": "TMZero-c, Googolplexic",
  "main": "main.js",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "build:python": "cd ../python && python build_exe.py",
    "build:all": "npm run build:python && npm run make"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "asar": true,
        "extraResource": [
          "../python/dist/server",
          "../python/dist/parse_slides"
        ],
        "icon": "assets/IMPORTANT"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "torgal"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "win32"
          ]
        }
      ]
    }
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.11.1",
    "@electron-forge/maker-squirrel": "^7.11.1",
    "@electron-forge/maker-zip": "^7.11.1",
    "electron": "^23.1.3"
  }
}